#include <zephyr/dt-bindings/mipi_dbi/mipi_dbi.h>
#include <zephyr/dt-bindings/display/ili9xxx.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
    chosen {
        zephyr,display = &ili9341;
        // zephyr,wifi = &wlan0;
    };

    aliases {
        // wifi0 = &nrf700x;
         lis2dh = &lis2dh12; 
    };

    CUSTOM_PINS_PCB {
        compatible = "gpio-keys";

        backlight: backlight {
            gpios = <&gpio0 8 GPIO_ACTIVE_HIGH>;   /* P0.08 for backlight */
            label = "Enable/Disable Backlight";
        };
    };
    // nordic_wlan0: nordic_wlan0 {
	// 	compatible = "nordic,wlan0";
	// 	status = "okay";
	// };

    mipi_dbi {
        compatible = "zephyr,mipi-dbi-spi";
        reset-gpios = <&gpio0 7 GPIO_ACTIVE_LOW>;  // Display reset
        dc-gpios = <&gpio0 23 GPIO_ACTIVE_HIGH>;   // Data/command select
        spi-dev = <&spi3>;

        #address-cells = <1>;
        #size-cells = <0>;

        ili9341: ili9341@0 {
            compatible = "ilitek,ili9341";
            reg = <0>;                             // CS index 0 (gpio0.22)
            mipi-max-frequency = <32000000>;

            width = <240>;
            height = <320>;
            rotation = <0>;

            ifmode = [40];
            ifctl = [01 00 00];
            pwctrla = [39 2c 00 34 02];
            pwctrlb = [00 8b 30];
            pwseqctrl = [55 01 23 01];
            timctrla = [84 11 7a];
            timctrlb = [00 00];
            pumpratioctrl = [10];
            enable3g = [02];
            etmod = [06];
            gamset = [01];
            frmctr1 = [00 1b];
            disctrl = [0a 82 27 04];
            pwctrl1 = [21];
            pwctrl2 = [10];
            vmctrl1 = [31 3c];
            vmctrl2 = [c0];

            pgamctrl = [
                0f 22 1f 0a 0e 06 4d 76 3b 03 0e 04 13 0e 0c
            ];
            ngamctrl = [
                0c 23 26 04 10 04 39 24 4b 03 0b 0b 33 37 0f
            ];

            status = "okay";
        };
    };
};

&spi3 {
    status = "okay";

    cs-gpios = <&gpio0 22 GPIO_ACTIVE_LOW>,   // CS0: Display
               <&gpio0 1 GPIO_ACTIVE_LOW>,    // CS1: nRF7002
               <&gpio0 0 GPIO_ACTIVE_LOW>;    // CS2: Flash

    pinctrl-0 = <&spi3_default>;
    pinctrl-1 = <&spi3_sleep>;
    pinctrl-names = "default", "sleep";

