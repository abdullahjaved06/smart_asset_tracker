    /* MX25R16 External SPI NOR Flash */
    mx25r16: mx25r16@2 {
        compatible = "jedec,spi-nor";
        reg = <2>;                                 // CS index 2
        spi-max-frequency = <80000000>;
        label = "MX25R16";
        jedec-id = [c2 28 15];
        size = <0x1000000>;                        // 2 MB
        has-dpd;
        t-enter-dpd = <10000>;                     // 10 us
        t-exit-dpd = <35000>;                      // 35 us
    };
};



&i2c0 {
    status = "okay";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
    clock-frequency = <I2C_BITRATE_STANDARD>;

    lis2dh12: lis2dh@18 {
        compatible = "st,lis2dh";
        reg = <0x18>;  // LIS2DH IÂ²C address when SDO/SA0 is LOW (your case)
        label = "LIS2DH12";
        irq-gpios = <&gpio0 6 GPIO_ACTIVE_LOW>, <&gpio0 7 GPIO_ACTIVE_LOW>;

    };
      sht4x: sht4x@44 {
        compatible="sensirion,sht4x";
        repeatability = <0>;
        reg = <0x44>;  // Check I2C address
        label = "SHT4X";
        // irq-gpios should only be included if needed
    };
};

&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SCL, 0, 25)>,
                    <NRF_PSEL(TWIM_SDA, 0, 24)>;
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SCL, 0, 25)>,
                    <NRF_PSEL(TWIM_SDA, 0, 24)>;
            low-power-enable;
        };
    };

     spi3_default: spi3_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 20)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 3)>,
                    <NRF_PSEL(SPIM_MISO, 0, 21)>;
        };
    };

    spi3_sleep: spi3_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 20)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 3)>,
                    <NRF_PSEL(SPIM_MISO, 0, 21)>;
            low-power-enable;
        };
    };
};

&uart0 {
    status = "disabled";
};

&spi0 {
    status = "disabled";
};

