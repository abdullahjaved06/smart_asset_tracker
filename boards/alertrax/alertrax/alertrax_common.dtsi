#include "alertrax_common-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "AlerTrax nRF91 V3";
	compatible = "alertrax,nrf91-v3";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,display = &ili9341;
        zephyr,wifi = &wlan0;
	};

	leds {
		compatible = "gpio-leds";
		led0_green: led_0 {
			gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;
			label = "LED 0";
		};
		led1_red: led_1 {
			gpios = <&gpio0 13 GPIO_ACTIVE_LOW>;
			label = "LED 1";
		};
		gps_fix_led: led_2 {
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
			label = "Status LED";
		};
		blue_led: led_3 {
			gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
			label = "Blue LED";
		};
	};
	buttons {
		compatible = "gpio-keys";
		button1: button_1 {
			gpios = <&gpio0 23 GPIO_ACTIVE_HIGH>;
			label = "NC reed";
		};
		gpsfix: gps_fix {
			gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
			label = "GPS Fix";
		};
	};

	  mipi_dbi {
        compatible = "zephyr,mipi-dbi-spi";
        reset-gpios = <&gpio0 7 GPIO_ACTIVE_LOW>;  // Display reset
        dc-gpios = <&gpio0 23 GPIO_ACTIVE_HIGH>;   // Data/command select
        spi-dev = <&spi3>;

        #address-cells = <1>;
        #size-cells = <0>;

        ili9341: ili9341@0 {
            compatible = "ilitek,ili9341";
            reg = <0>;                             // CS index 0 (gpio0.22)
            mipi-max-frequency = <32000000>;

            width = <320>;
            height = <240>;
            rotation = <90>;

            ifmode = [ 40  ];
            ifctl = [ 01 00 00  ];
            pwctrla = [ 39 2c 00 34 02  ];
            pwctrlb = [ 00 8b 30  ];
            pwseqctrl = [ 55 01 23 01  ];
            timctrla = [ 84 11 7a  ];
            timctrlb = [ 00 00  ];
            pumpratioctrl = [ 10  ];
            enable3g = [ 02  ];
            etmod = [ 06  ];
            gamset = [ 01  ];
            frmctr1 = [ 00 1b  ];
            disctrl = [ 0a 82 27 04  ];
            pwctrl1 = [ 21  ];
            pwctrl2 = [ 10  ];
            vmctrl1 = [ 31 3c  ];
            vmctrl2 = [ c0  ];

            pgamctrl = [ 0f 22 1f 0a 0e 06 4d 76 3b 03 0e 04 13 0e 0c  ];
            ngamctrl = [ 0c 23 26 04 10 04 39 24 4b 03 0b 0b 33 37 0f  ];

            status = "okay";
        };
    };
	

   gps_pwr: gps-pwr {
		compatible = "regulator-fixed";
		regulator-name = "tck106ag";
      enable-gpios = <&gpio0 12 GPIO_ACTIVE_HIGH>;
      startup-delay-us = <350>; 
      off-on-delay-us = <150>; 

		regulator-boot-on;
   };

   gpiocustom {
      compatible = "gpio-keys";
      gps_e_int: gps-e-int {
         label = "GPS Ext Int Wake";
         gpios = <&gpio0 9 GPIO_ACTIVE_HIGH>;
      };
      gps_reset: gps-reset {
         label = "GPS Reset";
         gpios = <&gpio0 10 GPIO_ACTIVE_LOW>;
      };
	   backlight: backlight {
            gpios = <&gpio0 8 GPIO_ACTIVE_HIGH>;   /* P0.08 for backlight */
            label = "Enable/Disable Backlight";
        };
		/*
      wifi_pwr: wifi-pwr {
         label = "Enable WiFi Power";
         gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
      };
		*/
   };

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0_green;
		led1 = &led1_red;
		led2 = &gps_fix_led;
		led3 = &blue_led;
		bootloader-led0 = &blue_led;
		sw1 = &button1; // NO reed
      sw3 = &gpsfix;
      //gps-pwr = &gps_pwr;

		mcuboot-led0 = &blue_led;
		watchdog0 = &wdt0;
		spi-flash0 = &mx25r16;
		accel0 = &lis2dh12;
      gpsuart = &uart2;
	};
};

/*
/ {
	zephyr,user {
		io-channels = <&adc 4>, <&adc 6>;
	};
};
*/

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&uart0 {
	status = "disabled";
	current-speed = <1000000>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

&uart1 {
	status = "disabled";
	current-speed = <1000000>;
	pinctrl-0 = <&uart1_default>;
	pinctrl-1 = <&uart1_sleep>;
	pinctrl-names = "default", "sleep";
};

&uart2 {
	status = "disabled";
	current-speed = <115200>;
	pinctrl-0 = <&uart2_default>;
	pinctrl-1 = <&uart2_sleep>;
	pinctrl-names = "default", "sleep";
};

&i2c1 {
	compatible = "nordic,nrf-twim";
	status = "okay";

	pinctrl-0 = <&i2c1_default>;
	pinctrl-1 = <&i2c1_sleep>;
	pinctrl-names = "default", "sleep";
	sht4x: sht4x@44 {
		compatible = "sensirion,sht4x";
		reg = <0x44>;
		repeatability = <2>;
		label = "SHT4X";
	};
	 lis2dh12: lis2dh@18 {
        compatible = "st,lis2dh";
        reg = <0x18>;  // LIS2DH IÂ²C address when SDO/SA0 is LOW (your case)
        label = "LIS2DH12";
		irq-gpios = <&gpio0 31 GPIO_ACTIVE_HIGH>,
			    <&gpio0 30 GPIO_ACTIVE_HIGH>;
		disconnect-sdo-sa0-pull-up;
	};
	
   mysensor: mysensor@84{
      compatible = "i2c-device";
      reg = <0x84>;
      label = "MYSENSOR";
   };

};

&spi3 {
	status = "okay";
	compatible = "nordic,nrf-spim", "spi-device";
	pinctrl-0 = <&spi3_default>;
	pinctrl-1 = <&spi3_sleep>;
	pinctrl-names = "default", "sleep";
	cs-gpios = <&gpio0 22 GPIO_ACTIVE_LOW>,   // CS0: Display
    <&gpio0 1 GPIO_ACTIVE_LOW>,               // CS1: nRF7002
    <&gpio0 0 GPIO_ACTIVE_LOW>;    			  // CS2: Flash

	 //     /* nRF7002 Wi-Fi */
    nrf70: nrf7002-spi@1 {
        compatible = "nordic,nrf7002-spi";
        status = "okay";
        reg = <1>;
		spi-max-frequency = <DT_FREQ_M(8)>;
		iovdd-ctrl-gpios = <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;    /* D0 */
		bucken-gpios = <&gpio0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;        /* D1 */
		host-irq-gpios = <&gpio0 2 GPIO_ACTIVE_HIGH>;     /* D7 */

		 /* List of interfaces */
        wlan0: wlan0 {
            compatible = "nordic,wlan";
        };

		wifi-max-tx-pwr-2g-dsss = <21>;
		wifi-max-tx-pwr-2g-mcs0 = <16>;
		wifi-max-tx-pwr-2g-mcs7 = <16>;
		wifi-max-tx-pwr-5g-low-mcs0 = <14>;
		wifi-max-tx-pwr-5g-low-mcs7 = <14>;
		wifi-max-tx-pwr-5g-mid-mcs0 = <14>;
		wifi-max-tx-pwr-5g-mid-mcs7 = <14>;
		wifi-max-tx-pwr-5g-high-mcs0 = <14>;
		wifi-max-tx-pwr-5g-high-mcs7 = <14>;
	};

	 /* MX25R16 External SPI NOR Flash */
    mx25r16: mx25r16@2 {
		status="okay";
		compatible = "jedec,spi-nor";
		reg = <2>;
		spi-max-frequency = <DT_FREQ_M(8)>;
/*
		spi-max-frequency = < 8000000 >;
		wp-gpios = < &gpio0 2 GPIO_ACTIVE_LOW >;
		hold-gpios = < &gpio0 1 GPIO_ACTIVE_LOW >;
		reset-gpios = < &gpio0 1 GPIO_ACTIVE_LOW >;
*/ 
		sfdp-bfp = [
			e5 20 f1 ff  ff ff ff 00  44 eb 08 6b  08 3b 04 bb
        	ee ff ff ff  ff ff 00 ff  ff ff 00 ff  0c 20 0f 52
        	10 d8 00 ff  23 72 f5 00  82 ed 04 c3  44 83 48 44
        	30 b0 30 b0  f7 c4 d5 5c  00 be 29 ff  f0 d0 ff ff
        ];
		size = < 0x1000000 >;
		jedec-id = [ c2 28 15 ];
		has-dpd;
		// dpd-wakeup-sequence = <30000 20 35000>;
		t-enter-dpd = <3000>;
		t-exit-dpd = <40000>;
		mxicy,mx25r-power-mode = "low-power";
	};
	
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x10000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
		};
		slot0_ns_partition: partition@50000 {
			label = "image-0-nonsecure";
		};
		slot1_partition: partition@80000 {
			label = "image-1";
		};
		slot1_ns_partition: partition@c0000 {
			label = "image-1-nonsecure";
		};
		/* 0xf0000 to 0xf7fff reserved for TF-M partitions */
		storage_partition: partition@f8000 {
			label = "storage";
			reg = <0x000f8000 0x00008000>;
		};
	};
};

/ {
   wifi_pwr: wifi-pwr {
		compatible = "regulator-fixed";
		regulator-name = "tck106ag";
      enable-gpios = <&gpio0 7 GPIO_ACTIVE_HIGH>;
      startup-delay-us = <350>; 
      off-on-delay-us = <150>; 

		regulator-boot-on;
   };
};


/ {

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		sram0_s: image_s@20000000 {
			/* Secure image memory */
		};

		sram0_bsd: image_bsd@20016000 {
			/* Modem (shared) memory */
		};

		sram0_ns: image_ns@20020000 {
			/* Non-Secure image memory */
		};
	};
};

/ {
	vbat: vbatt {
		compatible = "voltage-divider";
		io-channels = <&adc 4>;
		output-ohms = <100000>;
		full-ohms = <(100000 + 100000)>;
		power-gpios = <&gpio0 18 GPIO_ACTIVE_HIGH>;
	};
	vin: vin {
		compatible = "voltage-divider";
		io-channels = <&adc 6>;
		output-ohms = <12000>;
		full-ohms = <(100000 + 12000)>;
	};
};

